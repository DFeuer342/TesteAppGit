<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:srcCompat="@drawable/inst1" />

        <TextView
            android:id="@+id/textInstr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:justificationMode="inter_word"
            android:text="@string/textInstru"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textInstr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:justificationMode="inter_word"
            android:text="@string/textInstru1"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textInstr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:justificationMode="inter_word"
            android:text="@string/textInstru2"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btObjVoltar"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="clip_horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:onClick="btVoltarInstru"
                android:text="Voltar"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btObjIntru"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="clip_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:onClick="btIntruProxima"
                android:text="Proximo"
                android:textSize="20dp" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>